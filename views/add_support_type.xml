                <sheet> 
                    <group name="group_top"> 
                    <group name="group_left"> 
                        <field name="Site"/>
                    </group> 
                    </group> 
                </sheet> 

            </form>
        </field>
    </record>




<record id="view_tree_site" model="ir.ui.view"> 
  <field name="name">Site</field> 
  <field name="model">call.site</field> 
  <field name="arch" type="xml"> 
    <tree > 
      <field name="Site"/>  
    </tree> 
  </field> 
</record>

</odoo>